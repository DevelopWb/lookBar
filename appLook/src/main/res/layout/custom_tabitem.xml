<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/tabitem_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/bottom_button_home_press"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tabitem_text"
        style="@style/tab_textview"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:singleLine="true"
        android:text="上报"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/tabitem_image"
        app:layout_constraintRight_toRightOf="@+id/tabitem_image"
        app:layout_constraintTop_toBottomOf="@+id/tabitem_image" />

    <TextView
        android:id="@+id/unread_tv"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/bg_msg_number"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="@+id/tabitem_image"
        app:layout_constraintBottom_toTopOf="@+id/tabitem_image"
        app:layout_constraintLeft_toRightOf="@+id/tabitem_image"
        app:layout_constraintTop_toTopOf="@+id/tabitem_image" />


</android.support.constraint.ConstraintLayout>