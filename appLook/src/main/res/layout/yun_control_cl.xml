<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/yun_control_cl"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:background="@drawable/sp_circle_gray"
    android:padding="5dp">

    <ImageView
        android:id="@+id/control_up_iv"
        app:layout_constraintBottom_toTopOf="@+id/control_stop_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginBottom="4dp"
        android:padding="5dp"
        android:src="@mipmap/control_arrow_up"></ImageView>

    <ImageView
        android:id="@+id/control_left_iv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/control_stop_tv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginRight="4dp"
        android:padding="5dp"
        android:src="@mipmap/control_arrow_left"></ImageView>

    <ImageView
        android:id="@+id/control_down_iv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/control_stop_tv"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="4dp"
        android:padding="5dp"
        android:src="@mipmap/control_arrow_down"></ImageView>

    <ImageView
        android:id="@+id/control_right_iv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/control_stop_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginLeft="4dp"
        android:padding="5dp"
        android:src="@mipmap/control_arrow_right"></ImageView>

    <TextView
        android:id="@+id/control_stop_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/sp_btn_red_round"></TextView>
</android.support.constraint.ConstraintLayout>