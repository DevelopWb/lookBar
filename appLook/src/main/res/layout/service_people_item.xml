<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="70dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/service_people_pic_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/default_head_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <ImageView
        android:id="@+id/select_people_iv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/check_false_icon"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/service_people_pic_iv"></ImageView>

    <TextView
        android:id="@+id/select_people_name_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="姓名行"
        app:layout_constraintBottom_toBottomOf="@+id/select_people_iv"
        app:layout_constraintLeft_toRightOf="@+id/select_people_iv"
        app:layout_constraintTop_toTopOf="@+id/select_people_iv"></TextView>
</android.support.constraint.ConstraintLayout>