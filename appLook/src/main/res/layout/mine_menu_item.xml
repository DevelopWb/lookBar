<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/bg_white_only_bottom_gray_shape_1px"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:id="@+id/menu_icon_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/menu_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/menu_icon_iv"
        android:layout_marginLeft="15dp"
        android:textSize="14dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/menu_unread_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:minHeight="15dp"
        android:minWidth="15dp"
        android:padding="2dp"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tag_iv"
        android:layout_marginRight="5dp"
        android:includeFontPadding="false"
        android:textSize="10dp"
        android:background="@drawable/bg_msg_number"/>

    <ImageView
        android:id="@+id/tag_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/arrow_right"
        android:layout_marginRight="10dp"/>
</android.support.constraint.ConstraintLayout>