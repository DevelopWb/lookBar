<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">
    <RelativeLayout
        android:id="@+id/item_layout_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/care_item_iv"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/app_name"
            android:layout_marginTop="10dp"
            android:transitionName="transimage"
            android:layout_marginBottom="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/nopicture" />
        <TextView
            android:id="@+id/case_no"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/add_dev_tv"
            android:layout_below="@+id/case_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textSize="12dp"
            android:paddingRight="10dp"
            android:text="@string/item_btn"
            android:textColor="#ffffff"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/sp_blue_square_button"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>

        <TextView
            android:id="@+id/care_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:transitionName="transplace"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/add_dev_tv"
            android:textSize="14sp"
            android:layout_marginRight="10dp"
            android:textColor="#000000"
            android:layout_toRightOf="@id/care_item_iv"
            android:layout_toEndOf="@id/care_item_iv"
            android:layout_toStartOf="@id/add_dev_tv" />

        <TextView
            android:id="@+id/care_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/care_item_iv"
            android:layout_toEndOf="@id/care_item_iv"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text_default_color"
            android:layout_marginTop="5dp"
            android:text="@string/item_tvtwo"
            android:transitionName="transtime"
            android:layout_below="@id/care_detail_tv"
            android:layout_marginStart="10dp" />



    </RelativeLayout>
</RelativeLayout>