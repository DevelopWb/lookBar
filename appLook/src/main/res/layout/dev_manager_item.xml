<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/dev_icon_iv"
        android:layout_width="90dp"
        android:padding="5dp"
        android:layout_height="70dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>


    <TextView
        android:id="@+id/dev_name_tv"
        style="@style/item_title_style"
        android:layout_width="0dp"
        app:layout_constraintRight_toLeftOf="@+id/arrow_iv"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_chainStyle="packed"
        android:text="摄像头名称"
        app:layout_constraintBottom_toTopOf="@+id/dev_des_tv"
        app:layout_constraintLeft_toRightOf="@+id/dev_icon_iv"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/dev_des_tv"
        style="@style/item_content_style"
        app:layout_constraintRight_toRightOf="@+id/dev_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0"
        android:text="摄像头名称"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/dev_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/dev_name_tv"></TextView>

    <ImageView
        android:id="@+id/arrow_iv"
        android:layout_width="25dp"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/arrow_right"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toTopOf="@+id/dev_icon_iv"
        app:layout_constraintBottom_toBottomOf="@+id/dev_icon_iv"
        android:layout_height="35dp"></ImageView>
</android.support.constraint.ConstraintLayout>