<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="30dp">

    <TextView
        android:id="@+id/camera_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:text="分组的名称"
        android:paddingBottom="10dp"
        android:textColor="@color/text_default_color"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/group_selected_tag_tv"
        android:layout_width="15dp"
        android:layout_height="10dp"
        android:layout_marginRight="30dp"
        android:src="@mipmap/right_duihao_icon"
        app:layout_constraintBottom_toBottomOf="@+id/camera_type_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/camera_type_tv" />


</android.support.constraint.ConstraintLayout>